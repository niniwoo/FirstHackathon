<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comm_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardBackgroundColor="#BDB98E"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comm_relativeLayout"
        android:layout_width="391dp"
        android:layout_height="319dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/comm_date"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="120dp"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/comm_item_image"
            app:layout_constraintStart_toEndOf="@+id/comm_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comm_title"
            android:layout_width="201dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="8dp"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/comm_context"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/comm_item_image"
            app:layout_constraintStart_toEndOf="@+id/comm_item_image"
            app:layout_constraintTop_toBottomOf="@+id/comm_date" />

        <TextView
            android:id="@+id/comm_context"
            android:layout_width="338dp"
            android:layout_height="168dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="19dp"
            android:background="@color/white"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comm_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>